from glob import glob
from setuptools import setup, find_packages
setup(
    name = "bkr.client",
    version = "@VERSION@",

    packages=find_packages('src'),
    package_dir = {'':'src'},

    namespace_packages = ['bkr'],

    data_files = [
        ('/etc/beaker/', ['client.conf']),
        ('/usr/share/man/man1', glob('man/*.1')),
    ],

    entry_points = {
        'console_scripts': (
            'bkr = bkr.client.main:main',
        ),
    }
)
