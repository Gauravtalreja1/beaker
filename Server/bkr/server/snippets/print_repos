{% set repo_base = distro_tree.url_in_lab(system.lab_controller, 'http') %}
{% if repo_base %}
cat >> /etc/yum.repos.d/beaker-additional.repo <<EOF
{% for repo in distro_tree.repos %}
[{{ repo.repo_id }}]
name={{ repo.repo_id }}
baseurl={{ repo_base|urljoin(repo.path) }}
enabled=1
gpgcheck=0
skip_if_unavailable=1
{% endfor %}
EOF
{% endif %}
